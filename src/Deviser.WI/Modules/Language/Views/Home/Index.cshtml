@{
    ViewData["Title"] = "Index";
    //Layout = "~/_Layout.cshtml";
}

<div ng-app="deviser.language" ng-controller="LanguageCtrl as lVM">

    <div class="alert alert-dismissable" ng-class="{'alert-danger':lVM.message.messageType=='error',
                              'alert-info':lVM.message.messageType=='info',
                              'alert-success':lVM.message.messageType=='success',
                              'alert-warning':lVM.message.messageType=='warning'}" role="alert" ng-show="lVM.message.messageType">
        {{lVM.message.content}}
    </div>

    <div class="row" ng-show="lVM.currentViewState == lVM.viewStates.LIST">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-users"></i> Security Roles
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="#" class="form-horizontal" id="submit_form" method="POST">

                        <div class="form-body">
                            <div class="table-toolbar">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <a class="btn green" ng-click="lVM.add()"> New role <i class="fa fa-plus"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-advance table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Role Name
                                            </th>
                                            <th>
                                            </th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="role in lVM.roles">
                                            <td>
                                                {{role.name}}
                                            </td>
                                            <td>
                                                <a href="" class="btn default btn-xs purple" ng-click="lVM.edit(role)">
                                                    <i class="fa fa-edit"></i> Edit
                                                </a>
                                            </td>
                                            <td>
                                                <a href="" class="btn default btn-xs black" ng-click="lVM.remove(role)">
                                                    <i class="fa fa-trash-o"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-show="lVM.currentViewState == lVM.viewStates.EDIT">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-users"></i> Edit role
                    </div>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" name="editRoleForm">
                        <div class="form-body">
                            <div class="form-group" ng-class="{'has-error':lVM.hasError(editRoleForm, 'name', 'required')}">
                                <label class="col-md-3 control-label">Role Name<span class="required" aria-required="true">*</span></label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" placeholder="Enter role name" name="name" ng-model="lVM.selectedRole.name" required>
                                    <p class="help-block" ng-show="lVM.hasError(editRoleForm, 'name', 'required')">
                                        Role name is required.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green" ng-click="lVM.save()">Submit</button>
                                    <button type="button" class="btn default" ng-click="lVM.cancel()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-show="lVM.currentViewState == lVM.viewStates.NEW">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user"></i> Add new role
                    </div>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" name="roleForm" novalidate>
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Roles</label>
                                <div class="col-md-6">
                                    <ui-select ng-model="lVM.selectedLanguage" theme="bootstrap" ng-disabled="lVM.languages.length<=0">
                                        <ui-select-match placeholder="Select role">{{$select.selected.name}}</ui-select-match>
                                        <ui-select-choices repeat="language in lVM.languages | filter: $select.search">
                                            <div ng-bind-html="language.englishName | highlight: $select.search"></div>
                                        </ui-select-choices>
                                    </ui-select>
                                </div>
                                <div class="col-md-3">
                                    <a class="btn btn-primary" ng-click="lVM.addRole()" ng-disabled="(lVM.languages.length<=0 || !lVM.selectedLanguage)">Add Role</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green" ng-click="lVM.save()">Submit</button>
                                    <button type="button" class="btn default" ng-click="lVM.cancel()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>