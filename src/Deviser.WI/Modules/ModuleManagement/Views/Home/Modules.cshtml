
<div ng-app="deviser.module" ng-controller="ModuleManagementCtrl as mmVM">

    <div class="alert alert-dismissable" ng-class="{'alert-danger':mmVM.message.messageType=='error',
                              'alert-info':mmVM.message.messageType=='info',
                              'alert-success':mmVM.message.messageType=='success',
                              'alert-warning':mmVM.message.messageType=='warning'}" role="alert" ng-show="mmVM.message.messageType">
        {{mmVM.message.content}}
    </div>

    <div class="row" ng-show="mmVM.currentViewState == mmVM.viewStates.LIST">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-users"></i> Modules
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="#" class="form-horizontal" id="submit_form" method="POST">
                        <div class="form-body">
                            <div class="table-toolbar">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <a class="btn btn-success" ng-click="mmVM.add()"> New Module <i class="fa fa-plus"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-scrollable">
                                <table class="table table-striped table-bordered table-advance table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Module Name
                                            </th>
                                            <th>
                                            </th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="module in mmVM.modules">
                                            <td>
                                                {{module.name}}
                                            </td>
                                            <td>
                                                <a href="" class="btn btn-default btn-xs" ng-click="mmVM.edit(module)">
                                                    <i class="fa fa-edit"></i> Edit
                                                </a>
                                            </td>
                                            <td>
                                                <a href="" class="btn btn-default btn-xs" ng-click="mmVM.remove(module)">
                                                    <i class="fa fa-trash-o"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row" ng-show="mmVM.currentViewState == mmVM.viewStates.NEW || mmVM.currentViewState == mmVM.viewStates.EDIT
        || mmVM.currentViewState == mmVM.viewStates.NEWMODULEACTION ||mmVM.currentViewState == mmVM.viewStates.EDITMODULEACTION
        ||mmVM.currentViewState == mmVM.viewStates.LISTMODULEACTION">
        <div class="col-md-12">
            <div class="portlet box blue" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-th-list" aria-hidden="true"></i> Module Property
                    </div>
                </div>
                <div class="portlet-body form">
                    <form class="form-horizontal" name="moduleFrom" novalidate>
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Label</label>
                                <div class="col-md-6">
                                    <input class="form-control" name="label" ng-model="mmVM.selectedModule.label" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Name</label>
                                <div class="col-md-6">
                                    <input class="form-control"
                                           name="name"
                                           ng-model="mmVM.selectedModule.name"
                                           ng-disabled="mmVM.currentViewState == mmVM.viewStates.EDIT"
                                           sd-to-lower-case />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Module Desctiption</label>
                                <div class="col-md-6">
                                    <textarea class="form-control" rows="5" ng-model="mmVM.selectedModule.description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Is Active</label>
                                <div class="col-md-6">
                                    <input type="checkbox" ng-model="mmVM.selectedModule.isActive" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Version </label>
                                <div class="col-md-6">
                                    <input class="form-control" name="version" ng-model="mmVM.selectedModule.version" />
                                </div>
                            </div>


                            <div class="row" ng-show="mmVM.currentViewState == mmVM.viewStates.NEW || mmVM.currentViewState == mmVM.viewStates.EDIT
                            || mmVM.currentViewState == mmVM.viewStates.LISTMODULEACTION || mmVM.currentViewState == mmVM.viewStates.NEWMODULEACTION">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="btn-group">
                                                <a class="btn btn-success" ng-click="mmVM.addModuleActions()"> <i class="fa fa-plus"></i> Add Module Actions </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="table-toolbar">
                                        <div class="row">
                                            <div class="table-scrollable">
                                                <table class="table table-striped table-bordered table-advance table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                Display Name
                                                            </th>
                                                            <th>
                                                            </th>
                                                            <th>
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr ng-repeat="moduleAction in mmVM.selectedModule.moduleAction">
                                                            <td>
                                                                {{moduleAction.displayName}}
                                                            </td>
                                                            <td>
                                                                <a href="" class="btn btn-default btn-xs" ng-click="mmVM.editModuleActions(moduleAction)">
                                                                    <i class="fa fa-edit"></i> Edit
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <a href="" class="btn btn-default btn-xs" ng-click="mmVM.removeModuleActions(moduleAction)">
                                                                    <i class="fa fa-trash-o"></i> Delete
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row" ng-show="mmVM.currentViewState == mmVM.viewStates.EDITMODULEACTION || mmVM.currentViewState == mmVM.viewStates.NEWMODULEACTION ">
                                <div class="col-md-12">
                                    <div class="table-toolbar">
                                        <div class="row">
                                            <div class="table-scrollable">
                                                <table class="table table-striped table-bordered table-advance table-hover">

                                                    <tr>
                                                        <th>
                                                            Display Name
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="displayName" ng-model="mmVM.selectedModuleAction.displayName" ng-disabled="mmVM.currentViewState == mmVM.viewStates.EDITMODULEACTION" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Action Name
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="actionName" ng-model="mmVM.selectedModuleAction.actionName" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Controller Name
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="controllerName" ng-model="mmVM.selectedModuleAction.controllerName" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Controller Namespace
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="controllerNamespace" ng-model="mmVM.selectedModuleAction.controllerNamespace" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Icon Image
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="iconImage" ng-model="mmVM.selectedModuleAction.iconImage" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Icon Class
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="iconClass" ng-model="mmVM.selectedModuleAction.iconClass" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Is Default
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="isDefault" ng-model="mmVM.selectedModuleAction.isDefault" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Module ActionType
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="moduleActionType" ng-model="mmVM.selectedModuleAction.moduleActionType" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>
                                                            Page Modules
                                                        </th>
                                                        <td>
                                                            <input class="form-control" name="pageModules" ng-model="mmVM.selectedModuleAction.pageModules" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="2" align="center">
                                                            <button type="submit" class="btn btn-success" ng-click="mmVM.saveModuleAction()">Save Module Action</button>
                                                        </td>
                                                    </tr>

                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="submit" class="btn btn-success" ng-click="mmVM.save()" ng-disabled="!mmVM.selectedModule">Save</button>
                                        <button type="button" class="btn btn-default" ng-click="mmVM.cancel()">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


