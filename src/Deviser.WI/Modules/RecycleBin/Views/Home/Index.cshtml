@{
ViewData["Title"] = "Index";   
}
<require type="Script" priority="108" path="~/js/src/app/recycle-bin/recyclebin.js"></require>

<div ng-app="deviser.recycleBin" ng-controller="RecycleBinCtrl as rbVM">

<div class="alert alert-dismissable" ng-class="{'alert-danger':rbVM.message.messageType=='error',
                            'alert-info':rbVM.message.messageType=='info',
                            'alert-success':rbVM.message.messageType=='success',
                            'alert-warning':rbVM.message.messageType=='warning'}" role="alert" ng-show="rbVM.message.messageType">
    {{rbVM.message.content}}
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue" id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-recycle"></i> Recycle Bin
                </div>
            </div>

            <div class="portlet-body form">               
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_Pages" data-toggle="tab" aria-expanded="true">
                                Pages
                            </a>
                        </li>
                        <li class="">
                            <a href="#tab_PageContents" data-toggle="tab" aria-expanded="false">
                                Content Types
                            </a>
                        </li>
                        <li class="">
                            <a href="#tab_PageModules" data-toggle="tab" aria-expanded="false">
                                Modules
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="tab_Pages">
                            <div class="form-body">
                                <form action="#" class="form-horizontal" id="submit_form" method="POST">
                                    <div class="table-scrollable">
                                        <table class="table table-striped table-bordered table-advance table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Title
                                                    </th>
                                                    <th>
                                                        Restore
                                                    </th>
                                                    <th>
                                                        Delete
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="role in rbVM.pages">
                                                    <td>
                                                        {{page.name}}
                                                    </td>
                                                    <td>
                                                        <a href="" class="btn btn-default btn-xs" ng-click="rbVM.restore(page)">
                                                            <i class="fa fa-refresh"></i> Restore
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="" class="btn btn-default btn-xs" ng-click="rbVM.remove(page)">
                                                            <i class="fa fa-trash-o"></i> Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab_PageContents">
                            <div class="form-body">
                                <form action="#" class="form-horizontal" id="submit_form" method="POST">
                                    <div class="table-scrollable">
                                        <table class="table table-striped table-bordered table-advance table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Title
                                                    </th>
                                                    <th>
                                                        Restore
                                                    </th>
                                                    <th>
                                                        Delete
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="role in rbVM.pageContents">
                                                    <td>
                                                        {{pageContent.name}}
                                                    </td>
                                                    <td>
                                                        <a href="" class="btn btn-default btn-xs" ng-click="rbVM.restore(pageContent)">
                                                            <i class="fa fa-refresh"></i> Restore
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="" class="btn btn-default btn-xs" ng-click="rbVM.remove(pageContent)">
                                                            <i class="fa fa-trash-o"></i> Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab_PageModules">
                            <div class="form-body">
                                <form action="#" class="form-horizontal" id="submit_form" method="POST">
                                    <div class="table-scrollable">
                                        <table class="table table-striped table-bordered table-advance table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Title
                                                    </th>
                                                    <th>
                                                        Restore
                                                    </th>
                                                    <th>
                                                        Delete
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="role in rbVM.pageModules">
                                                    <td>
                                                        {{pageModule.name}}
                                                    </td>
                                                    <td>
                                                        <a href="" class="btn btn-default btn-xs" ng-click="rbVM.restore(pageModule)">
                                                            <i class="fa fa-refresh"></i> Restore
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="" class="btn btn-default btn-xs" ng-click="rbVM.remove(pageModule)">
                                                            <i class="fa fa-trash-o"></i> Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>              
        </div>
    </div>
</div>
</div>
   

   