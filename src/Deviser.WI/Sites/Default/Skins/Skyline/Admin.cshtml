@using Deviser.Core.Library.TagHelpers;
@inject IScopeService scopeService
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentPage = scopeService.PageContext.CurrentPage;
}

<div id="wrapper">
    @await Component.InvokeAsync("ControlBar")
    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu" sd-nav="Admin" sd-nav-page="SystemOnly"></ul>            
        </div>
        <!-- /.sidebar-collapse -->
    </div>
    <div id="page-wrapper" style="min-height: 1220px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-bar clearfix"
                         sd-breadcrumb="Admin">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@currentPage.PageTranslation.First().Title</h1>
                    @RenderBody()
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->        
    </div>
    <div class="page-footer">
        <div class="page-footer-inner">
            @DateTime.Now.Year &copy; Deviser WCM <a href="http://skydevise.com" title="SKY Devise" target="_blank">SKY Devise</a>
        </div>
        <div class="scroll-to-top">
            <i class="icon-arrow-up"></i>
        </div>
    </div>
</div>