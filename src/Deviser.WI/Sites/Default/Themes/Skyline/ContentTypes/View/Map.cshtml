@model DynamicContent
@inject IScopeService scopeService
@{
    var pageContext = scopeService.PageContext;
    var currentCulture = pageContext.CurrentCulture.ToString();

    dynamic rootObj = Model.Content;
    int totalItems = 0;
    if (rootObj != null)
    {
        totalItems = rootObj.items.Count;
    }

    var id = "sd-map" + Model.PageContent.Id.ToString();

}

@if (rootObj != null)
{
    <script>
        (function () {
            var mapOptions = {
                center: new google.maps.LatLng(47.049784, 8.307883), //46.818993, 8.238791
                zoom: 10,
                mapTypeControl: false,
                scrollwheel: false,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                pan:{
                    x:0,
                    y:0
                }
            };

            var mapStyles = [{
                stylers: [{
                    hue: "#b4e9ff"
                }, {
                    visibility: "on"
                }, {
                    saturation: -50
                }]
            }];

            var markerImage = {
                url: "/assets/images/map-marker-icon.png",
                size: new google.maps.Size(40, 55),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(20, 55),
                scaledSize: new google.maps.Size(40, 55)
            };

            var infoBoxOptions = {
                disableAutoPan: true,
                pixelOffset: new google.maps.Size(0, -130),
                zIndex: null,
                closeBoxMargin: "0px",
                closeBoxURL: "/assets/images/close.png",
                isHidden: false,
                pane: "floatPane",
                enableEventPropagation: false,
                alignBottom: false,
                boxClass: 'custom-info-window'
            };

            var locations = @Html.Raw(SDJsonConvert.SerializeObject(rootObj.items));
            
            for(var i =0; i<locations.length; i++){
                var location = locations[i];

                var content = '';
                content += (location.Title) ? '<div>' + location.title + '</div>' : '';
                content += (location.LocationName) ? '<div>' + location.locationName + '</div>' : '';
                content += (location.Address) ? '<div>' + location.address + '</div>' : '';
                content += (location.PostalCodeAndCity) ? '<div>' + location.postalCodeAndCity + '</div>' : '';
                content += (location.Phone) ? '<div>' + location.phone + '</div>' : '';
                content += (location.Fax) ? '<div>' + location.fax + '</div>' : '';
                content += (location.Email) ? '<div>' + location.email + '</div>' : '';

                location.content = content;
            }

            google.maps.event.addDomListener(window, "load", function () {
                var map = new sdMap({
                    mapElementId: '@id',
                    locations: locations,
                    showMoreLabel: 'Show more',
                    mapOptions: mapOptions,
                    mapStyles: mapStyles,
                    markerImage: markerImage,
                    infoBoxOptions: infoBoxOptions
                });
                map.init();
            });
        }());
    </script>

    <div class="map-container" id="@id"></div>
}
else
{
    <div>
        Please enter the content
    </div>
}