<script type="text/ng-template" id="contenttypes/image.html">
    <div class="modal-header">
        <h3 class="modal-title">Edit {{ecVM.typeInfo.type}}</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <ui-select ng-model="ecVM.selectedLocale" theme="bootstrap" ng-disabled="ecVM.languages.length<=0" ng-change="ecVM.changeLanguage()">
                <ui-select-match placeholder="Coose a language">{{$select.selected.englishName}}</ui-select-match>
                <ui-select-choices repeat="language.cultureCode as language in ecVM.languages | filter: $select.search">
                    <div ng-bind-html="language.englishName | highlight: $select.search"></div>
                    <small ng-bind-html="language.nativeName | highlight: $select.search"></small>
                </ui-select-choices>
            </ui-select>
        </div>
        <div class="form-group">
            <div sd-image-manager src="ecVM.contentTranslation.contentData.imageUrl" alt="ecVM.contentTranslation.contentData.imageAltText" focus-point="ecVM.contentTranslation.contentData.focusPoint"></div>
        </div>        
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ecVM.save()">Save</button>
        <button class="btn btn-warning" type="button" ng-click="ecVM.cancel()">Cancel</button>
    </div>
</script>
    
