<script type="text/ng-template" id="contenttypes/map.html">
    <div class="modal-header">
        <h3 class="modal-title">Edit {{ecVM.typeInfo.type}}</h3>
    </div>
    <div class="modal-body" ng-init="ecVM.isList=true">
        
        <div class="form-group" sd-language-selector selected-locale="ecVM.selectedLocale" change-language="ecVM.changeLanguage()" ng-show="!ecVM.isDetailView"></div>

        <div ng-show="!ecVM.isDetailView">
            <div class="form-group">
                <a ng-click="ecVM.newItem()" class="btn btn-primary"><i class="fa fa-plus"></i> Add</a>
            </div>
            <table class="table table-hover" style="max-height:500px;overflow:auto">
                <thead>
                    <tr>
                        <th>Location Name</th>
                        <th>Latitude</th>
                        <th>Logitude</th>
                        <th>View Order</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody ui-sortable="ecVM.sortableOptions" ng-model="ecVM.contentTranslation.contentData.items">
                    <tr ng-repeat="item in ecVM.contentTranslation.contentData.items track by item.id | orderBy:item.viewOrder" class="item" style="cursor: move;">
                        <td>{{item.locationName}}</td>
                        <td>{{item.latitude}}</td>
                        <td>{{item.longitude}}</td>
                        <td>{{item.viewOrder}}</td>
                        <td>
                            <a ng-click="ecVM.editItem(item)" class="btn btn-default"><i class="fa fa-pencil"></i> Edit</a>
                        </td>
                        <td>
                            <a ng-click="ecVM.removeItem(item)" class="btn btn-danger"><i class="fa fa-trash-o"></i> Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div ng-show="ecVM.isDetailView">
            <div class="form-group">
                <label for="txtTitle">Title</label>
                <input type="text" id="txtTitle" ng-model="ecVM.selectedItem.title" class="form-control" placeholder="Enter title">
            </div>
            <div class="form-group">
                <label for="txtTitle">Location Name</label>
                <input type="text" id="txtTitle" ng-model="ecVM.selectedItem.locationName" class="form-control" placeholder="Enter location name">
            </div>
            <div class="form-group">
                <label for="txtTitle">Address</label>
                <input type="text" id="txtTitle" ng-model="ecVM.selectedItem.address" class="form-control" placeholder="Enter address">
            </div>
            <div class="form-group">
                <label for="txtTitle">Postal Code and City</label>
                <input type="text" id="txtTitle" ng-model="ecVM.selectedItem.postalCodeAndCity" class="form-control" placeholder="Enter postal code and city">
            </div>
            <div class="form-group">
                <label for="txtTitle">Latitude</label>
                <input type="text" id="txtTitle" ng-model="ecVM.selectedItem.latitude" class="form-control" placeholder="Enter latitude">
            </div>
            <div class="form-group">
                <label for="txtTitle">Longitude</label>
                <input type="text" id="txtTitle" ng-model="ecVM.selectedItem.longitude" class="form-control" placeholder="Enter logitude">
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <div ng-show="!ecVM.isDetailView">
            <button class="btn btn-primary" type="button" ng-click="ecVM.save()" ng-disabled="ecVM.isDetailView">Save</button>
            <button class="btn btn-warning" type="button" ng-click="ecVM.cancel()" ng-disabled="ecVM.isDetailView">Cancel</button>
        </div>
        <div ng-show="ecVM.isDetailView">
            <a class="btn btn-primary" ng-click="ecVM.updateItem()">Update Location</a>
            <a class="btn btn-default" ng-click="ecVM.cancelDetailView()">Back to List</a>
        </div>
    </div>
</script>

