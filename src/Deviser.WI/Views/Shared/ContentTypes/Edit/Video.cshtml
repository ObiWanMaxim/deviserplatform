<script type="text/ng-template" id="contenttypes/video.html">
    <div class="modal-header">
        <h3 class="modal-title">Edit {{ecVM.typeInfo.type}}</h3>
    </div>
    <div class="modal-body">
        
        <div class="form-group" sd-language-selector selected-locale="ecVM.selectedLocale" change-language="ecVM.changeLanguage()" ng-show="!ecVM.isDetailView"></div>

        <div class="form-group">
            <div class="form-group">
                <label for="txtTitle">Thumbnail Image</label>
                <div sd-image-manager 
                     src="ecVM.contentTranslation.contentData.imageUrl" 
                     alt="ecVM.contentTranslation.contentData.imageAltText" 
                     focus-point="ecVM.contentTranslation.contentData.focusPoint"
                     properties="ecVM.properties"
                     ></div>
            </div>
            <div class="form-group">
                <label for="txtTitle">Video URL</label>
                <input type="text" id="txtTitle" ng-model="ecVM.contentTranslation.contentData.videoUrl" class="form-control" placeholder="Enter video url">
            </div>  
        </div>        
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="ecVM.save()">Save</button>
        <button class="btn btn-warning" type="button" ng-click="ecVM.cancel()">Cancel</button>
    </div>
</script>
    
