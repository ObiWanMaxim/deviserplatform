@model Deviser.Core.Common.DomainTypes.PageContent
@inject IScopeService scopeService
@{
    bool isEditMode = false;
    if (ViewData["isEditMode"] != null)
    {
        isEditMode = (bool)ViewData["isEditMode"];
    }
    var pageContext = scopeService.PageContext;
    var currentCulture = pageContext.CurrentCulture.ToString();
    PageContentTranslation contentTranslation = null;
    if (Model.PageContentTranslation != null)
    {
        contentTranslation = Model.PageContentTranslation.FirstOrDefault(t => t.CultureCode == currentCulture);
    }

    var rootObj = JsonConvert.DeserializeObject<dynamic>(contentTranslation.ContentData);

}

@if (contentTranslation != null)
{
    <img src="@rootObj.imageUrl" alt="@rootObj.imageAltText" />
}
else{
    <div>
        Please enter the content
    </div>
}